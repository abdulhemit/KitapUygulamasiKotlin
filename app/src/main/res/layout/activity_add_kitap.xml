<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddKitapActivity">

    <EditText
        android:id="@+id/kitapText"
        android:layout_width="259dp"
        android:layout_height="55dp"
        android:layout_marginTop="115dp"
        android:ems="10"
        android:hint="kitap ismi"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/aptorText"
        android:layout_width="259dp"
        android:layout_height="55dp"
        android:layout_marginTop="30dp"
        android:ems="10"
        android:hint="aptor ismi"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/kitapText" />

    <Button
        android:id="@+id/button"
        android:layout_width="209dp"
        android:layout_height="46dp"
        android:layout_marginTop="61dp"
        android:text="sakla"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/aptorText" />
</androidx.constraintlayout.widget.ConstraintLayout>